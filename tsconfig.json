{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "noImplicitAny": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "removeComments": true,
    "strict": true,
    "typeRoots": [
      "./node_modules/@types",
      "src/@types"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "allowJs": true,
    "paths": {
      "@config/*": [
        "src/config/*"
      ],
      "@modules/*": [
        "src/modules/*"
      ],
      "@shared/*": [
        "src/shared/*"
      ]
    },
  },
  "exclude": [
    "./commitlint.config.js"
  ]
}
